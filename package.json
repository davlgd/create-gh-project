{
  "name": "create-gh-project",
  "version": "0.1.2",
  "description": "ðŸš€ Bootstrap your projects with all the essential files and configurations",
  "main": "src/index.ts",
  "type": "module",
  "scripts": {
    "start": "bun run src/index.ts",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "clean": "rm -rf node_modules/ *.log .DS_Store *~ *.tmp coverage/ .nyc_output/ test-output*/ tmp/",
    "editorconfig:check": "editorconfig-checker",
    "fix": "bun run lint:fix && bun run format:fix",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "lint": "eslint src tests --ext .ts",
    "lint:fix": "eslint src tests --ext .ts --fix",
    "typecheck": "tsc --noEmit",
    "validate": "bun run typecheck && bun run lint && bun run format && bun run editorconfig:check && bun run test"
  },
  "bin": {
    "create-gh-project": "src/index.ts"
  },
  "keywords": [
    "bootstrap",
    "project",
    "scaffold",
    "cli",
    "github",
    "create",
    "generator"
  ],
  "author": "davlgd",
  "license": "Apache-2.0",
  "homepage": "https://github.com/davlgd/create-gh-project#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/davlgd/create-gh-project.git"
  },
  "bugs": {
    "url": "https://github.com/davlgd/create-gh-project/issues"
  },
  "dependencies": {
    "commander": "^14.0"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^5.2",
    "@types/bun": "^1.2.20",
    "@typescript-eslint/eslint-plugin": "^8.39",
    "@typescript-eslint/parser": "^8.39",
    "editorconfig-checker": "^6.1",
    "eslint": "^9.33",
    "eslint-config-prettier": "^10.1",
    "prettier": "^3.6",
    "typescript": "^5.9"
  },
  "engines": {
    "bun": ">=1.0.0"
  }
}
